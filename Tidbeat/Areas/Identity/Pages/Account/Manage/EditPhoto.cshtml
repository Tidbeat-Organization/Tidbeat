@page
@model EditPhotoModel

<h1>Edit Photo</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="photoFile">Select a photo to upload:</label>
        <input type="file" id="photoFile" name="photoFile">
    </div>
    @if (Model.User != null) {
        <div class="form-group">
            <label>Current Photo:</label>
            <img src="@await Model.GetUserPhotoUrlAsync()" alt="User photo" width="200">
        </div>
    }
    <div class="form-group">
        <button type="submit" name="editButton" class="btn btn-primary">Edit Photo</button>
    </div>
    <div class="form-group">
        <button type="submit" name="deleteButton" class="btn btn-danger">Delete Photo</button>
    </div>
</form>
