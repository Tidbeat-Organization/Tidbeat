@page
@model EditPhotoModel
@{
    string currentPhoto = await Model.GetUserPhotoUrlAsync();
}
<h1>Edit Photo</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="photoFile">Select a photo to upload:</label>
        <input type="file" id="photoFile" name="photoFile">
    </div>
    @if (Model.User != null) {
        <div class="form-group">
            <label>Current Photo:</label>
            <img src="@(!string.IsNullOrEmpty(currentPhoto) ? currentPhoto:"~/images/UnknownUser.jpg")" alt="User photo" width="200">
        </div>
    }
    <div class="form-group">
        <button type="submit" name="editButton" class="btn btn-primary">Alterar Foto</button>
    </div>
    <div class="form-group">
        <button type="submit" name="deleteButton" class="btn btn-danger">Apagar Foto</button>
    </div>
</form>
