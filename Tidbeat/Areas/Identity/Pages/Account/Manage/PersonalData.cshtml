@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row justify-content-center">
    <div class="col-md-6 w-100">
        <h3 >Têm a certeza que deseja apagar o seu Perfil?</h3>
        <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger text-white bg-danger">Delete</a>
        <a id="cancelDelete" class="btn btn-danger border border-warning text-danger">Cancelar</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
