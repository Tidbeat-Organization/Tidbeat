@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="text-decoration-none text-primary">Voltar</a></li>
    <hr />
    <li class="nav-item"><a class="text-decoration-none text-black @ManageNavPages.EditPhotoNavClass(ViewContext)" id="editphoto" asp-page="./EditPhoto">Alterar foto</a></li>
    <hr />
    <li class="nav-item"><a class="text-decoration-none text-black @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
    <hr />
    <li class="nav-item"><a class="text-decoration-none text-black @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Alterar Email</a></li>
    <hr />
    <li class="nav-item"><a class="text-decoration-none text-black @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Alterar Password</a></li>
    <hr />
   @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item"><a id="external-login" class="text-decoration-none text-black @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
        <hr />
    }
    <li class="nav-item"><a class="text-decoration-none text-black @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <hr />
    <li class="nav-item"><a class="text-decoration-none text-black @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
    <hr />
</ul>
