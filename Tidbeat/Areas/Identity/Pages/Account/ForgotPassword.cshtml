@page
@model ForgotPasswordModel
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;
@{
    ViewData["Title"] = Localizer["forgot_password"];
}

<h1 style="margin-top: 175px; color: #6610F2;">@ViewData["Title"]</h1>
<h2 style="margin-top: 75px; color: #6610F2; font-size: 20px;">@Localizer["enter_email_below"]</h2>
<div class="row" style="display: flex; justify-content: center; align-items: center; margin-top: 100px;">
    <div class="col-md-4">
        <h6 style="margin-top: 10px; color: #6610F2;">Email</h6>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email" class="form-label">@Localizer["email"]</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button style="margin-top: 100px;" type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["reset_password"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
