@model Tidbeat.Models.Post

@{
    ViewData["Title"] = "Edit";
}

<div class="row" style="margin-top: 100px;">
    <h3 style="color: #6610F2;">Editar Post</h3>
    <hr />
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label" style="color: #6610F2;"></label>
                <input asp-for="Title" class="form-control" style="border: 1.5px solid #6610F2;" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <label asp-for="Content" class="control-label" style="color: #6610F2;"></label>
                <input asp-for="Content" class="form-control" style="height: 200px; border: 1.5px solid #6610F2;" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group create-button" style="margin-top: 25px;">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 20px;">
    <a asp-action="Index">Cancelar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
