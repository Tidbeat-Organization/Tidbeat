@using Tidbeat.Enums
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;
@model IEnumerable<Tidbeat.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<div style="margin-top: 100px;">
    @if (TempData["Message"] != null)
    {
        <div id="success-alert" class="alert alert-success mt-2 alert-dismissible fade show position-relative d-flex justify-content-center align-items-center" role="alert">
            @TempData["Message"]
            <button type="button" class="close btn position-absolute end-0" data-dismiss="alert" aria-label="Close">
                <span class="fs-4" aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <h3 style="color: #6610F2;">@Localizer["recommended_posts"]</h3>
    <hr />
    <div class="w-100 border border-2 border-dark" style="border-radius: 6pt; border-width: 0.75pt !important;">
        <!-- Left-aligned text saying Filtros -->
        <h5 class="text-primary fw-semibold text-start mt-1 ms-2">Filtros</h5>
        <div class="text-dark fw-semibold mt-3 mb-1 d-flex flex-row">
            <div class="filter-height-rectifier mb-2 ms-2">Nome:</div>
            <div class="filter-height-rectifier mb-2 ms-2">
                <input id="filter-name-input" class="form-control filter-field" placeholder="Escreva termo de pesquisa..." style="border: 1.5px solid #6610F2; border-radius: 15px;" />
            </div>
            <div class="filter-height-rectifier mb-2 ms-5">Género:</div>
            <div class="filter-height-rectifier mb-2 ms-2">
                <input id="filter-name-input" class="form-control filter-field" placeholder="" style="border: 1.5px solid #6610F2; border-radius: 15px;" />
            </div>
            <div class="filter-height-rectifier mb-2 ms-5">Ordenar por:</div>
            <div class="filter-height-rectifier mb-2 ms-2">
                <input id="filter-name-input" class="form-control filter-field" placeholder="" style="border: 1.5px solid #6610F2; border-radius: 15px;" />
            </div>
            <div class="bi bi-search search-btn ms-5"></div>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <p>
            <a asp-action="Create" class="bottom-0 end-0 mt-3 me-4 mb-4 btn btn-primary post-btn-center-lg">@Localizer["create_new_post"]</a>
        </p>
    }
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.PostId" style="background-color:#6610F2;color:#fff;" class="btn btn-sm btn-outline-secondary">@Localizer["details"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script>
    $(document).ready(function () {
        // Hide the success and error messages after 5 seconds
        $("#success-alert, #error-alert").delay(5000).fadeOut(500);

        // Dismiss the success and error messages when the close button is clicked
        $(".close").click(function () {
            $("#success-alert, #error-alert").alert("close");
        });
    });
</script>
<style>
    .filter-height-rectifier {
        height: 24pt;
        line-height: 26pt;
    }

    .filter-field {
        width: 20vw;
    }
</style>