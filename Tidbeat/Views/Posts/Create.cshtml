            position: absolute;
            background-color: white;
            border-radius: 0 0 5px 5px;
            border-top: none;
            border-color: #6610F2;
            font-family: sans-serif;
            border: 1px solid #6610F2;
            width:625px;
            padding: 5px;
            max-height: 10rem;
            overflow-y: auto
        }

            datalist option {
                color: black;
                background-color: white;
                cursor: pointer;
            }

        option {
            color: black;
            background-color: white;
            cursor: pointer;
        }

        datalist option:hover, datalist option:focus {
            color: black;
            background-color: lightskyblue;
        }
