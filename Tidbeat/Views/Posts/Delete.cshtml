@model Tidbeat.Models.Post

@{
    ViewData["Title"] = "Delete";
}

<h3 style="color: #6610F2; margin-top: 100px;">Apagar Post</h3>
<hr />

<div class="container d-flex justify-content-center">
    <dl class="row">
        <dt class="col-sm-2" style="color: #6610F2;">
            @Html.DisplayNameFor(model => model.Song)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Song)
        </dd>

        <dt class="col-sm-2" style="color: #6610F2; margin-top:10px;">
            @Html.DisplayNameFor(model => model.Band)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px;">
            @Html.DisplayFor(model => model.Band)
        </dd>

        <dt class="col-sm-2" style="color: #6610F2; margin-top:10px;">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px;">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2" style="color: #6610F2; margin-top:10px;">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10" style="margin-top:10px;">
            @Html.DisplayFor(model => model.Content)
        </dd>
    </dl>
</div>

<div class="container d-flex justify-content-center" style="margin-top:20px;">
    <form asp-action="Delete" onsubmit="return confirm('De certeza que pretende apagar este post?');">
        <input type="hidden" asp-for="PostId" />
        <input type="submit" value="Apagar" style="background-color: #6610F2; color: #FFFFFF; border: none; padding: 5px 10px; border-radius: 5px;" />
        <a asp-action="Index" style="margin-left: 50px; margin-right: 10px;">Cancelar</a>
    </form>
</div>