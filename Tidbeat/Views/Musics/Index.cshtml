@using Tidbeat.Controllers
@using Tidbeat.Services
@inject IMusicService MusicService

@{
    ViewData["Title"] = "Musics Page";
}

<div class="mt-5">
    <div class="mx-3">
        <div class="border border-3 border-dark rounded">
            <div class="display-6 text-primary text-left w-2">Filtros</div>
            <div class="d-flex flex-row">
                <div class="input-group d-flex flex-row">
                    <div class="align-self-center mx-3">Género:</div>
                    <div class="form-outline d-flex flex-row">
                        <img class="no-padding align-self-center" src="~/images/SearchIcon.png" height="26" width="30" />
                        <input type="search" id="formGender" class="form-control" placeholder="Search" />
                    </div>
                </div>
                <div class="input-group d-flex flex-row">
                    <div class="align-self-center mx-3">Banda/Artista:</div>
                    <div class="form-outline  d-flex flex-row">
                        <img class="no-padding align-self-center" src="~/images/SearchIcon.png" height="26" width="30" />
                        <input type="search" id="formBand" class="form-control" placeholder="Search" />
                    </div>
                </div>
                <div class="input-group d-flex flex-row">
                    <div class="align-self-center mx-3">Álbum:</div>
                    <div class="form-outline  d-flex flex-row">
                        <img class="no-padding align-self-center" src="~/images/SearchIcon.png" height="26" width="30" />
                        <input type="search" id="formAlbum" class="form-control" placeholder="Search" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>