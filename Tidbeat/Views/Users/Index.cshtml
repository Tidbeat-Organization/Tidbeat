@model IEnumerable<ApplicationUser>

<div class="container">
    <h1 class="text-center" style="margin-top: 80px;">Lista de utilizadores</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (var user in Model)
        {
            <div class="col mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@user.FullName</h5>
                        <p class="card-text"><strong>Gender:</strong> @user.Gender</p>
                        <p class="card-text"><strong>Birthday:</strong> @user.BirthdayDate.ToShortDateString()</p>
                        <a href="@Url.Action("Details", "Profiles", new { id = user.Id })" class="btn btn-primary">View Profile</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

